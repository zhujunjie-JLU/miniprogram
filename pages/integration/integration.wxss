.page{
  display: flex;
  flex-direction: column;
  width: 750rpx; 
  background-color: #00ACFF;
  height: 100vh;
}

.topbj {
  background-color: #00ACFF;
  flex-direction: column;
  padding-top: 8rem;
  padding-bottom:3rem;
  background-size: cover;
}
.total {
  background-color: #00ACFF;
  margin: auto;
  width: 12.5rem;
  height: 9rem;
  align-items: center;
  flex-direction: column;
  border-radius: 40%;
  padding-top: 4.5rem;
  
  border: 3px solid rgba(255, 255, 255, 0.6);
  -webkit-box-shadow: 0px 1px 2px rgba(136, 136, 136, 0.5);
  box-shadow: 0px 1px 2px rgba(136, 136, 136, 0.5);
}
.score1{
  text-align:center;
  font-size: 2.5rem;
}
.score2{
  text-align:center;
  font-size: 1.1rem;
}
